@model List<Instructor>
@{
    ViewData["Title"] = "Instructors";
}

<h1>Instructors</h1>
<a href="/Instructor/Add" class="btn btn-success">New</a>

<form asp-action="Search" method="get" class="form-inline">
    <input type="text" name="name" class="form-control mr-2" placeholder="Search instructors" />
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-search"></i> Search
    </button>
</form>

<table class="table table-hover table-bordered">

    <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Salary</th>
        <th>Address</th>
        <th>Dept_id</th>
        <th>Deptartment Name</th>

        <th>More Details</th>
        <th>Edit</th>
        <th>Delete</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <img src="@Url.Content("~/images/" + @item.Image)" style="width : 80px" />
            </td>
            <td>@item.Salary</td>
            <td>@item.Address</td>
            <td>@item.Dept_id</td>
            <td>@(item.Department != null ? item.Department.Name : "No Department")</td>

            <td>
                <a href="/Instructor/Details/@item.Id">More details</a>
            </td>
            <td>
                <a href="/Instructor/Edit/@item.Id">Edit</a>
            </td>
            <td>
                <a href="/Instructor/Delete/@item.Id">Delete</a>
            </td>



        </tr>
    }
</table>