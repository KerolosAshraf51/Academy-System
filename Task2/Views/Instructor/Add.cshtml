@model Instructor
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>
<form method="post" action="/Instructor/SaveAdd">

    <div>
        <label>Name</label>
        <input type="text" id="Name"  name="Name" value="@Model?.Name" class="form form-control" />
    </div>

    <div>
    <label>Image</label>
    <input type="file" name="Image" value="@Model?.Image" class="form form-control" />
    </div>

    <div>
        <label>Salary</label>
        <input type="number" id=Salary  name="Salary" value="@Model?.Salary" class="form form-control" />
    </div>

    <div>
        <label>Address</label>
        <input type="text" id ="Address" name="Address" value="@Model?.Address" class="form form-control" />
    </div>


    <input type="submit" value="Create" class="btn btn-primary" />
</form>

<a href="/Instructor/Index">Back to list</a>
