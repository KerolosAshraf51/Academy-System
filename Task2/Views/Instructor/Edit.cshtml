@using Task2.ViewModel
@model instructorWithDeptViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" action="/Instructor/SaveEdit/@Model.Id">
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />

    <div>
        <label>Name</label>
        <input type="text" id="Name" name="Name" value="@Model?.Name" class="form form-control" />
    </div>

    <div>
        <label>Image</label>
        <input type="text" id="Image" name="Image" value="@Model?.Image" class="form form-control" />
    </div>

    <div>
        <label>Salary</label>
        <input type="number" id="Salary" name="Salary" value="@Model?.Salary" class="form form-control" />
    </div>

    <div>
        <label>Address</label>
        <input type="text" id="Address" name="Address" value="@Model?.Address" class="form form-control" />
    </div>

    <div>
        <label>Department ID</label>
        <select id="Dept_id" name="Dept_id" class="form form-control">
            @foreach (var deptItem in Model.DeptList)
            {
                if (Model.Dept_id == deptItem.Id)
                {
                    <option value="@deptItem.Id" selected>  @deptItem.Id</option>
                }
                else
                {
                    <option value="@deptItem.Id" >  @deptItem.Id</option>

                }
            }
        </select>
    </div>

    <input type="submit" value="Edit" class="btn btn-primary" />
</form>
